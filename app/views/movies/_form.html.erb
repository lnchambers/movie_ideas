<%= form_for @movie do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :images %>
<%= f.collection_select :image_id, MovieImage.all, :id, :image_id %>

<%= f.label :category %>
<%= f.collection_select :category_id, Category.all, :id, :name %>

<%= f.hidden_field :user_id, :value => current_user.id %>

<%= f.submit %>

<% end %>
